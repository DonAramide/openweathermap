<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aramydeopenweathermap.fragments.AlgorithmFragment">
        <LinearLayout
            android:id="@+id/mainlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:weightSum="10"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_after_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:weightSum="6"
                android:background="@drawable/naturer_a"
                android:layout_marginRight="1dp"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="45dp"
                        android:layout_marginRight="136dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="New Delhi"
                            android:textColor="@color/black"
                            android:layout_marginLeft="18dp"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:gravity="left"
                            android:layout_marginLeft="18dp"
                            android:text="Fri july 32"
                            android:textSize="18sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="24dp" />
                        <TextView
                            android:id="@+id/day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:gravity="left"
                            android:textColor="@color/black"
                            android:layout_marginLeft="18dp"
                            android:text="Light rain"

                            android:textStyle="bold"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="136dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:src="@drawable/rain" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="245dp"
                    android:layout_marginRight="136dp"
                    android:layout_marginBottom="36dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/degree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="32&#xb0;C"
                        android:layout_marginLeft="18dp"
                        android:textSize="68sp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_card_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:weightSum="3"
                android:gravity="center"
                android:layout_marginRight="1dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="30dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="66dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:src="@drawable/thterm" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#6E6767"
                            android:gravity="left"
                            android:layout_marginLeft="6dp"
                            android:text="Feels Like"
                            android:textSize="18sp" />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="6dp"
                                    android:gravity="left"
                                    android:text="32&#xb0;C "
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />
                                <TextView
                                    android:id="@+id/ther"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#6C0BF8"
                                    android:gravity="left"
                                    android:layout_marginLeft="1dp"
                                    android:text="Today"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="36dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="24dp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="30dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="66dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:src="@drawable/humidity" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#6E6767"
                                android:gravity="left"
                                android:layout_marginLeft="6dp"
                                android:text="Humidity"
                                android:textSize="18sp" />
                            <TextView

                                android:id="@+id/humi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:gravity="left"
                                android:layout_marginLeft="6dp"
                                android:text="98%"
                                android:textSize="18sp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="24dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="30dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="66dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:src="@drawable/wind" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#6E6767"
                                android:gravity="left"
                                android:layout_marginLeft="6dp"
                                android:text="Wind"
                                android:textSize="18sp" />
                            <TextView
                                android:id="@+id/wind"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:gravity="left"
                                android:layout_marginLeft="6dp"
                                android:text="13km/h"
                                android:textSize="18sp" />
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="36dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="24dp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="30dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="66dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:src="@drawable/uvindex" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#6E6767"
                                android:gravity="left"
                                android:layout_marginLeft="6dp"
                                android:text="UV Index"
                                android:textSize="18sp" />
                            <TextView
                                android:id="@+id/uv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:gravity="left"
                                android:layout_marginLeft="6dp"
                                android:text="7"
                                android:textSize="18sp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

   </LinearLayout>



        </LinearLayout>



</FrameLayout>
